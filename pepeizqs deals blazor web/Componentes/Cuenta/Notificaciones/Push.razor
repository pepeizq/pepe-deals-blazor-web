    protected override async Task OnAfterRenderAsync(bool primerRender)
    {
        if (primerRender == true)
        {
            try
            {
                navegadorSoportaNotificaciones = await JavaScript.InvokeAsync<bool>("supportsNotifications");

                if (navegadorSoportaNotificaciones == true)
                {
                    var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
                    usuarioId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

                    if (string.IsNullOrEmpty(usuarioId) == false)
                    {
                        var suscripcionExiste = Db.PushSubscriptions.FirstOrDefault(s => s.UserId == usuarioId && s.Activa);

                        if (suscripcionExiste != null)
                        {
                            usuarioSuscrito = true;
                        }
                    }
                }

                if (usuarioSuscrito == true)
                {
                    usuario = await BaseDatos.Usuarios.Buscar.OpcionesNotificacionesPush(usuarioId);

                    if (usuario != null)
                    {
                        if (usuario.NotificationPushLows == null)
                        {
                            estadoDeseadosMinimos = null;
                        }
                        else
                        {
                            if (usuario.NotificationPushLows == true)
                            {
                                estadoDeseadosMinimos = "checked";
                            }
                            else
                            {
                                estadoDeseadosMinimos = null;
                            }
                        }

                        if (usuario.NotificationPushBundles == null)
			            {
				            estadoBundles = null;
			            }
			            else
			            {
				            if (usuario.NotificationPushBundles == true)
				            {
					            estadoBundles = "checked";
				            }
				            else
				            {
					            estadoBundles = null;
				            }
			            }

                        if (usuario.NotificationPushFree == null)
                        {
                            estadoGratis = null;
                        }
                        else
                        {
                            if (usuario.NotificationPushFree == true)
                            {
                                estadoGratis = "checked";
                            }
                            else
                            {
                                estadoGratis = null;
                            }
                        }

                        if (usuario.NotificationPushSubscriptions == null)
                        {
                            estadoSuscripciones = null;
                        }
                        else
                        {
                            if (usuario.NotificationPushSubscriptions == true)
                            {
                                estadoSuscripciones = "checked";
                            }
                            else
                            {
                                estadoSuscripciones = null;
                            }
                        }

                        if (usuario.NotificationPushWeb == null)
                        {
                            estadoWeb = null;
                        }
                        else
                        {
                            if (usuario.NotificationPushWeb == true)
                            {
                                estadoWeb = "checked";
                            }
                            else
                            {
                                estadoWeb = null;
                            }
                        }

                        if (usuario.NotificationPushOthers == null)
                        {
                            estadoOtros = null;
                        }
                        else
                        {
                            if (usuario.NotificationPushOthers == true)
                            {
                                estadoOtros = "checked";
                            }
                            else
                            {
                                estadoOtros = null;
                            }
                        }

                    }
                }

                StateHasChanged();
            }
            catch (Exception ex)
            {
                BaseDatos.Errores.Insertar.Mensaje("AfterRender Notificaciones Push", ex, false);
            }
        }
    }

    private async Task ActivarNotificaciones()
    {
        if (string.IsNullOrEmpty(usuarioId))
        {
            return;
        }

        try
        {
            var publicKey = Config["NotificacionesPush:PublicKey"];

            if (string.IsNullOrEmpty(publicKey) == false)
            {
                var subscriptionJson = await JavaScript.InvokeAsync<string>("registerServiceWorker", publicKey);

                if (string.IsNullOrEmpty(subscriptionJson))
                {
                    // errorMessage = "El usuario rechazó las notificaciones";
                    return;
                }

                if (subscriptionJson != null)
                {
                    var existingSubscription = Db.PushSubscriptions.FirstOrDefault(s => s.UserId == usuarioId);

                    if (existingSubscription != null)
                    {
                        existingSubscription.SubscriptionJson = subscriptionJson;
                        existingSubscription.FechaCreacion = DateTime.UtcNow;
                        existingSubscription.Activa = true;
                        Db.PushSubscriptions.Update(existingSubscription);
                    }
                    else
                    {
                        var subscription = new PushSubscription
                        {
                            UserId = usuarioId,
                            SubscriptionJson = subscriptionJson,
                            FechaCreacion = DateTime.UtcNow,
                            Activa = true
                        };

                        Db.PushSubscriptions.Add(subscription);
                    }

                    await Db.SaveChangesAsync();
                    usuarioSuscrito = true;
                }
            }  
        }
        catch (Exception ex)
        {
            BaseDatos.Errores.Insertar.Mensaje("Activar Notificaciones Push", ex, false);
        }
    }

    private async Task DesactivarNotificaciones()
    {
        if (string.IsNullOrEmpty(usuarioId))
        {
            // errorMessage = "Usuario no autenticado";
            return;
        }

        try
        {
            var suscripcion = Db.PushSubscriptions.FirstOrDefault(s => s.UserId == usuarioId && s.Activa);

            if (suscripcion != null)
            {
                Db.PushSubscriptions.Remove(suscripcion);
                await Db.SaveChangesAsync();
            }

            usuarioSuscrito = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            BaseDatos.Errores.Insertar.Mensaje("Desactivar Notificaciones Push", ex, false);
        }
    }

    private async void ClickearCambioDeseadosMinimos()
