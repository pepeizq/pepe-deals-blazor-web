						</div>
					</button>
				</div>
			</div>

			<div style="padding: 30px; display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 30px; justify-items: center;">
				@if (juegos?.Count > 0)
				{
					foreach (var item in juegosConDatos)
					{
						var recompensaJuego = item.recompensa;
						var juego = item.juego;

						if (juego != null)
						{
							bool usuarioTieneJuego = Herramientas.UsuarioJuegos.ComprobarSiTiene(juegosUsuario, juego, recompensaJuego.DRM);
							bool usuarioTieneDeseado = false;

							string fondoColor = "background-color: var(--fondoBotonPequeño);";

							if (usuarioTieneJuego)
							{
								fondoColor = "background-color: var(--fondoBien);";
							}
							else
							{
								usuarioTieneDeseado = Herramientas.Deseados.ComprobarSiEsta(deseadosUsuario?.SteamWishlist, deseadosUsuario?.Wishlist, deseadosUsuario?.GogWishlist, juego, recompensaJuego.DRM);

								if (usuarioTieneDeseado)
								{
									fondoColor = "background-color: var(--fondoAlerta);";
								}
							}

							bool enseñar = ocultarJuegos != "checked" || !usuarioTieneJuego;

							if (enseñar == true)
							{
								<button @onclick="@(e => MostrarJuego(e, recompensaJuego, juego))" class="recompensa-expandir"
										title="@juego.Nombre" style="text-align: left; border: 0; width: 100%; font-size: 15px; padding: 0px; color: var(--colorTexto); background-color: var(--fondoBotonPequeño); box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.28),0px 0px 2px 0px rgba(0, 0, 0, 0.24);">

