	<div class="cuerpo-ancho" style="width: 100%; margin: 40px auto;">
		@if (opciones?.PatreonCoins >= 120)
		{
			<div class="caja-patreontienda" style="background-color: var(--noResultados); justify-content: center; gap: 30px; width: 100%; padding: 20px 30px; border-radius: 20px; margin-bottom: 40px;">
