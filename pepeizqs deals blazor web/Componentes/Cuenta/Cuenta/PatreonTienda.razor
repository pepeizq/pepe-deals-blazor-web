										<img src="@juego.Imagenes.Library_600x900" style="width: 100%; height: 100%;" />

										<div style="display: flex; align-items: center; padding: 10px;">
											@{
												string imagenDRM = global::Juegos.JuegoDRM2.SacarImagen(recompensaJuego.DRM);
											}

											<img src="@imagenDRM" style="width: 20px; height: 20px;" />
											<div style="width: 100%; text-align: right;">@recompensaJuego.Coins Coins</div>
										</div>
									</div>
								</button>
							}
						}
					}
				}
			</div>
		</div>
